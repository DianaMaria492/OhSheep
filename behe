<body>
<div class="container">
    <img src="https://www.creativecenter.brother/-/media/creativecenter/contents/home/home/home-category/cards-invitations/valentines-day/sheep-love/sheep-love-cards-invitations-l-en.ashx" alt="Sheep Image" class="sheep-image" id="sheepImage">
    <div class="message" id="message">You can do it, just be in the sheep's vibe</div>
</div>

<script>
    // Select the sheep image and the message element
    const sheepImage = document.getElementById('sheepImage');
    const message = document.getElementById('message');

    // Add click event listener to the sheep image
    sheepImage.addEventListener('click', () => {
        // Toggle the 'active' class on the message to display it
        message.classList.toggle('active');

        // Create hearts
        for (let i = 0; i < 100; i++) {
            createHeart();
        }
    });

    function createHeart() {
        const heart = document.createElement('div');
        heart.classList.add('heart');
        heart.style.left = Math.random() * 100 + 'vw';
        heart.style.animationDuration = Math.random() * 2 + 3 + 's';
        document.body.appendChild(heart);

        setTimeout(() => {
            heart.remove();
        }, 5000);
    }
</script>
